{
  "name": "zeroreg",
  "version": "0.1.0",
  "description": "Regex was a mistake. Just like your ex. A human-readable regex builder.",
  "author": "Zen",
  "license": "MIT",
  "type": "module",

  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./patterns": {
      "types": "./dist/patterns/index.d.ts",
      "import": "./dist/patterns/index.js",
      "require": "./dist/patterns/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zenweb3/zeroreg"
  },
  "bugs": {
    "url": "https://github.com/zenweb3/zeroreg/issues"
  },
  "keywords": [
    "regex",
    "regexp",
    "regular-expression",
    "builder",
    "human-readable",
    "typescript",
    "pattern-matching"
  ],
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
